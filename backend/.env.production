PORT=5002
NODE_ENV=production

# Database - MUST be configured for production
DB_HOST=localhost
DB_USER=classtrack_prod
DB_PASSWORD=
DB_NAME=class_ai_db
DB_PORT=3306
DB_SSL=true
DB_CONNECTION_LIMIT=20
DB_TIMEOUT=60000

# JWT - MUST generate secure secrets
JWT_SECRET=
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email services
SENDGRID_API_KEY=
MAILGUN_API_KEY=

# Frontend URL - MUST be your actual domain
FRONTEND_URL=https://yourdomain.com

# QR Settings
QR_EXPIRY_SECONDS=300

# Security settings
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
AUTH_RATE_LIMIT_MAX=3
SESSION_SECRET=
CSRF_SECRET=
ENCRYPTION_KEY=

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# SSL/TLS
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# CORS settings
CORS_ORIGINS=https://yourdomain.com

# Health checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# File upload limits
MAX_FILE_SIZE=10mb
UPLOAD_PATH=/app/uploads

# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30